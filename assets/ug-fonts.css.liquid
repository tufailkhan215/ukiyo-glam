{% comment %}
  Self-hosted fonts: add cormorant.woff2, cormorant.woff, poppins.woff2, poppins.woff to theme Assets.
  Enable "Use theme asset fonts" in Theme settings > Typography.
{% endcomment %}
@font-face {
  font-family: Cormorant;
  font-weight: 400;
  font-style: normal;
  font-display: swap;
  src: url("{{ 'cormorant.woff2' | asset_url }}") format("woff2"), url("{{ 'cormorant.woff' | asset_url }}") format("woff");
}
@font-face {
  font-family: Poppins;
  font-weight: 400;
  font-style: normal;
  font-display: swap;
  src: url("{{ 'poppins.woff2' | asset_url }}") format("woff2"), url("{{ 'poppins.woff' | asset_url }}") format("woff");
}
