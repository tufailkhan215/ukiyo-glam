<section class="ug-product-tab section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      {% render 'ug-section-heading', heading: section.settings.heading, alignment: 'center' %}
    {% endif %}
    <div class="ug-product-tab__tabs" data-product-tabs>
      {% for block in section.blocks %}
        {% if block.type == 'tab' and block.settings.collection != blank %}
          <button type="button" class="ug-product-tab__tab{% if forloop.first %} ug-product-tab__tab--active{% endif %}" data-tab="{{ block.settings.collection.handle }}" {{ block.shopify_attributes }}>{{ block.settings.title | default: block.settings.collection.title }}</button>
        {% endif %}
      {% endfor %}
    </div>
    <div class="ug-product-tab__panels">
      {% for block in section.blocks %}
        {% if block.type == 'tab' and block.settings.collection != blank %}
          <div class="ug-product-tab__panel{% if forloop.first %} ug-product-tab__panel--active{% endif %}" data-panel="{{ block.settings.collection.handle }}" {{ block.shopify_attributes }}>
            <ul class="ug-product-tab__grid">
              {% for product in block.settings.collection.products limit: section.settings.products_to_show %}
                <li>{% render 'ug-card-product', product: product %}</li>
              {% endfor %}
            </ul>
            {% if section.settings.show_view_all %}
              <a href="{{ block.settings.collection.url }}" class="ug-btn ug-btn--secondary ug-product-tab__view-all">{{ 'collections.general.view_all' | t }}</a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product tabs",
  "max_blocks": 6,
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "range", "id": "products_to_show", "min": 4, "max": 16, "step": 2, "default": 8, "label": "Products per tab" },
    { "type": "checkbox", "id": "show_view_all", "default": true, "label": "Show view all" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        { "type": "text", "id": "title", "label": "Tab title" },
        { "type": "collection", "id": "collection", "label": "Collection" }
      ]
    }
  ],
  "presets": [{ "name": "Product tabs", "blocks": [{ "type": "tab" }, { "type": "tab" }] }]
}
{% endschema %}
