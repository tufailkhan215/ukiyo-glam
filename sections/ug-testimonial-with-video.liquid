<section class="ug-testimonial-video section-{{ section.id }}-padding">
  <div class="page-width ug-testimonial-video__grid">
    <div class="ug-testimonial-video__media">
      {% if section.settings.video_url != blank %}
        {% if section.settings.video_url.type == 'youtube' %}
          <iframe src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}" allowfullscreen class="ug-testimonial-video__iframe"></iframe>
        {% elsif section.settings.video_url.type == 'vimeo' %}
          <iframe src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}" allowfullscreen class="ug-testimonial-video__iframe"></iframe>
        {% endif %}
      {% elsif section.settings.cover_image != blank %}
        <img src="{{ section.settings.cover_image | image_url: width: 600 }}" alt="" width="600" loading="lazy">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'ug-testimonial-video__placeholder' }}
      {% endif %}
    </div>
    <div class="ug-testimonial-video__content">
      {% if section.settings.quote != blank %}<blockquote class="ug-testimonial-video__quote">{{ section.settings.quote }}</blockquote>{% endif %}
      {% if section.settings.author != blank %}<cite class="ug-testimonial-video__author">â€” {{ section.settings.author }}</cite>{% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonial with video",
  "settings": [
    { "type": "video_url", "id": "video_url", "label": "Video URL", "accept": ["youtube", "vimeo"] },
    { "type": "image_picker", "id": "cover_image", "label": "Cover image" },
    { "type": "textarea", "id": "quote", "label": "Quote" },
    { "type": "text", "id": "author", "label": "Author" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Testimonial with video" }]
}
{% endschema %}
