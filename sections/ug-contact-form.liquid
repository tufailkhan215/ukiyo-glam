<section class="ug-contact-form section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      {% render 'ug-section-heading', heading: section.settings.heading, subheading: section.settings.subheading, alignment: section.settings.heading_alignment %}
    {% endif %}
    {% form 'contact', class: 'ug-contact-form__form' %}
      {% if form.posted_successfully? %}
        <p class="ug-contact-form__success">{{ 'contact.form.success' | t }}</p>
      {% endif %}
      {{ form.errors | default_errors }}
      <div class="ug-contact-form__grid">
        <div class="ug-contact-form__field">
          <label for="ContactForm-name">{{ 'contact.form.name' | t }}</label>
          <input type="text" id="ContactForm-name" name="contact[name]" required>
        </div>
        <div class="ug-contact-form__field">
          <label for="ContactForm-email">{{ 'contact.form.email' | t }}</label>
          <input type="email" id="ContactForm-email" name="contact[email]" required>
        </div>
      </div>
      <div class="ug-contact-form__field">
        <label for="ContactForm-phone">{{ 'contact.form.phone' | t }}</label>
        <input type="tel" id="ContactForm-phone" name="contact[phone]">
      </div>
      <div class="ug-contact-form__field">
        <label for="ContactForm-message">{{ 'contact.form.message' | t }}</label>
        <textarea id="ContactForm-message" name="contact[body]" rows="5" required></textarea>
      </div>
      <button type="submit" class="ug-btn ug-btn--primary">{{ 'contact.form.submit' | t }}</button>
    {% endform %}
  </div>
</section>

{% schema %}
{
  "name": "Contact form",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "select", "id": "heading_alignment", "options": [{"value": "left","label": "Left"},{"value": "center","label": "Center"},{"value": "right","label": "Right"}], "default": "center", "label": "Heading alignment" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Contact form" }]
}
{% endschema %}
