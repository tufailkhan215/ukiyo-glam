{% if section.settings.show_cookie_banner %}
<div id="ug-cookie-banner" class="ug-cookie-banner ug-cookie-banner--{{ section.settings.position }}" role="dialog" aria-label="Cookie notice" hidden>
  <div class="page-width">
    <div class="ug-cookie-banner__inner">
      <p class="ug-cookie-banner__text">{{ section.settings.text }}</p>
      {% if section.settings.privacy_link != blank %}
        <a href="{{ section.settings.privacy_link }}" class="ug-cookie-banner__link">{{ section.settings.privacy_link_text | default: 'Privacy policy' }}</a>
      {% endif %}
      <button type="button" class="ug-btn ug-btn--primary ug-cookie-banner__accept" data-accept-cookies>{{ section.settings.button_text }}</button>
    </div>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "Cookie banner",
  "settings": [
    { "type": "checkbox", "id": "show_cookie_banner", "default": true, "label": "Show cookie banner" },
    { "type": "select", "id": "position", "options": [
      { "value": "bottom", "label": "Bottom" },
      { "value": "top", "label": "Top" }
    ], "default": "bottom", "label": "Position" },
    { "type": "textarea", "id": "text", "label": "Message", "default": "We use cookies to improve your experience. By continuing you agree to our use of cookies." },
    { "type": "url", "id": "privacy_link", "label": "Privacy policy link" },
    { "type": "text", "id": "privacy_link_text", "label": "Privacy link text", "default": "Privacy policy" },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "Accept" }
  ]
}
{% endschema %}
