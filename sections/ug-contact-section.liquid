{% comment %} Contact section â€“ full contact block (address, map, form) mirroring source contact-section {% endcomment %}
<section class="ug-contact-section section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="ug-contact-section__grid">
      <div class="ug-contact-section__info">
        {% if section.settings.heading != blank %}<h2 class="ug-contact-section__heading">{{ section.settings.heading }}</h2>{% endif %}
        {% if section.settings.address != blank %}
          <div class="ug-contact-section__address">
            {% render 'ug-icon-location' %}
            <span>{{ section.settings.address }}</span>
          </div>
        {% endif %}
        {% if section.settings.phone != blank %}
          <div class="ug-contact-section__phone">
            {% render 'ug-icon-phone' %}
            <a href="tel:{{ section.settings.phone | replace: ' ', '' }}">{{ section.settings.phone }}</a>
          </div>
        {% endif %}
        {% if section.settings.email != blank %}
          <div class="ug-contact-section__email">
            {% render 'ug-icon-mail' %}
            <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
          </div>
        {% endif %}
        {% if section.settings.hours != blank %}
          <div class="ug-contact-section__hours">
            <span class="ug-contact-section__label">{{ section.settings.hours_heading | default: 'Hours' }}</span>
            <span>{{ section.settings.hours }}</span>
          </div>
        {% endif %}
      </div>
      <div class="ug-contact-section__form-wrap">
        {% form 'contact', class: 'ug-contact-section__form' %}
          {% if form.posted_successfully? %}<p class="ug-contact-section__success">{{ 'contact.form.success' | t }}</p>{% endif %}
          <input type="text" name="contact[name]" placeholder="{{ 'contact.form.name' | t }}" required>
          <input type="email" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" required>
          <textarea name="contact[body]" placeholder="{{ 'contact.form.message' | t }}" rows="5"></textarea>
          <button type="submit" class="ug-btn ug-btn--primary">{{ 'contact.form.send' | t }}</button>
        {% endform %}
      </div>
    </div>
  </div>
</section>

<style>
  .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; }
</style>

{% schema %}
{
  "name": "Contact section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "textarea", "id": "address", "label": "Address" },
    { "type": "text", "id": "phone", "label": "Phone" },
    { "type": "text", "id": "email", "label": "Email" },
    { "type": "text", "id": "hours_heading", "label": "Hours heading" },
    { "type": "textarea", "id": "hours", "label": "Office hours" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Contact section" }]
}
{% endschema %}
