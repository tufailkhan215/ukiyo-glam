<section class="ug-password-content page-width">
  <h1>{{ 'general.password_page.title' | t }}</h1>
  <p>{{ 'general.password_page.message' | t }}</p>
  {% form 'storefront_password', class: 'ug-password-form' %}
    {{ form.errors | default_errors }}
    <label for="Password">{{ 'general.password_page.login_form_password_label' | t }}</label>
    <input type="password" name="password" id="Password" placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}">
    <button type="submit">{{ 'general.password_page.login_form_submit' | t }}</button>
  {% endform %}
</section>
{% schema %}{ "name": "Password content", "settings": [] }{% endschema %}
