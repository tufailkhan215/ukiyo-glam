<section class="ug-hotspot section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="ug-hotspot__wrap">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 1200 }}" alt="{{ section.settings.heading | escape }}" width="1200" loading="lazy" class="ug-hotspot__img">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'ug-hotspot__placeholder' }}
      {% endif %}
      {% for block in section.blocks %}
        {% if block.type == 'point' %}
          <div class="ug-hotspot__point" style="left: {{ block.settings.position_x }}%; top: {{ block.settings.position_y }}%;" {{ block.shopify_attributes }}>
            <button type="button" class="ug-hotspot__dot" aria-label="{{ block.settings.label | escape }}" data-hotspot-trigger></button>
            <div class="ug-hotspot__tooltip" data-hotspot-tooltip>
              {% if block.settings.heading != blank %}<strong>{{ block.settings.heading }}</strong>{% endif %}
              {% if block.settings.text != blank %}<p>{{ block.settings.text }}</p>{% endif %}
              {% if block.settings.link_label != blank and block.settings.link != blank %}<a href="{{ block.settings.link }}">{{ block.settings.link_label }}</a>{% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hotspot",
  "max_blocks": 8,
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Image" },
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "blocks": [
    {
      "type": "point",
      "name": "Point",
      "settings": [
        { "type": "range", "id": "position_x", "min": 0, "max": 100, "step": 5, "default": 50, "label": "Position X %" },
        { "type": "range", "id": "position_y", "min": 0, "max": 100, "step": 5, "default": 50, "label": "Position Y %" },
        { "type": "text", "id": "label", "label": "Accessibility label" },
        { "type": "text", "id": "heading", "label": "Tooltip heading" },
        { "type": "textarea", "id": "text", "label": "Tooltip text" },
        { "type": "text", "id": "link_label", "label": "Link label" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [{ "name": "Hotspot" }]
}
{% endschema %}
