{% comment %} Home slider with tabs â€“ slider + tabbed content below (mirror source home-slider-width-tabs) {% endcomment %}
<section class="ug-home-slider-tabs section-{{ section.id }}-padding">
  <div class="ug-home-slider-tabs__slider">
    <div class="ug-slideshow__track" data-ug-home-slider>
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          <div class="ug-slideshow__slide" {{ block.shopify_attributes }}>
            <div class="ug-slideshow__media">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 1600 }}" alt="{{ block.settings.heading | escape }}" width="1600" loading="{{ forloop.first | json }}">
              {% else %}
                {{ 'lifestyle-1' | placeholder_svg_tag: 'ug-slideshow__placeholder' }}
              {% endif %}
            </div>
            <div class="ug-slideshow__content page-width">
              {% if block.settings.heading != blank %}<h2 class="ug-slideshow__heading">{{ block.settings.heading }}</h2>{% endif %}
              {% if block.settings.button_label != blank %}<a href="{{ block.settings.link | default: '#' }}" class="ug-btn ug-btn--primary">{{ block.settings.button_label }}</a>{% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  {% if section.settings.show_tabs and section.blocks.size > 0 %}
    <div class="page-width ug-home-slider-tabs__tabs">
      <div class="ug-home-slider-tabs__tab-list" role="tablist">
        {% for block in section.blocks %}
          {% if block.type == 'slide' and block.settings.tab_label != blank %}
            <button type="button" class="ug-home-slider-tabs__tab" role="tab" data-ug-home-tab="{{ forloop.index0 }}" aria-selected="{% if forloop.first %}true{% else %}false{% endif %}">{{ block.settings.tab_label }}</button>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</section>

<style>
  .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; }
</style>

{% schema %}
{
  "name": "Home slider with tabs",
  "max_blocks": 6,
  "settings": [
    { "type": "checkbox", "id": "show_tabs", "default": true, "label": "Show tabs" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 0, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "blocks": [
    { "type": "slide", "name": "Slide", "settings": [
      { "type": "image_picker", "id": "image", "label": "Image" },
      { "type": "text", "id": "heading", "label": "Heading" },
      { "type": "text", "id": "button_label", "label": "Button label" },
      { "type": "url", "id": "link", "label": "Link" },
      { "type": "text", "id": "tab_label", "label": "Tab label" }
    ]}
  ],
  "presets": [{ "name": "Home slider with tabs", "blocks": [{ "type": "slide" }] }]
}
{% endschema %}
