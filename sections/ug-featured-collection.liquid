<section class="ug-featured-collection section-{{ section.id }}" aria-label="Featured collection">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="ug-featured-collection__title">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.collection != blank %}
      <ul class="ug-featured-collection__grid">
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          <li class="ug-featured-collection__item">
            {% render 'ug-card-product', product: product %}
          </li>
        {% endfor %}
      </ul>
      {% if section.settings.show_view_all %}
        <a href="{{ section.settings.collection.url }}" class="ug-btn ug-btn--secondary">{{ 'collections.general.view_all' | t }}</a>
      {% endif %}
    {% else %}
      <p>{{ 'sections.collection_list.empty' | t }}</p>
    {% endif %}
  </div>
</section>

{% style %}
  .section-{{ section.id }} { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; }
{% endstyle %}

{% schema %}
{
  "name": "Featured collection",
  "settings": [
    { "type": "text", "id": "title", "label": "Heading", "default": "Featured collection" },
    { "type": "collection", "id": "collection", "label": "Collection" },
    { "type": "range", "id": "products_to_show", "min": 2, "max": 12, "step": 1, "default": 4, "label": "Products to show" },
    { "type": "checkbox", "id": "show_view_all", "default": true, "label": "Show 'View all' button" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Featured collection" }]
}
{% endschema %}
