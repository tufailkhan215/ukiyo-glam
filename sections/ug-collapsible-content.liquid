<section class="ug-collapsible section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      {% render 'ug-section-heading', heading: section.settings.heading, alignment: section.settings.heading_alignment %}
    {% endif %}
    <div class="ug-collapsible__list">
      {% for block in section.blocks %}
        {% if block.type == 'row' %}
          <details class="ug-collapsible__item" {{ block.shopify_attributes }}>
            <summary class="ug-collapsible__summary">
              {{ block.settings.heading }}
              {% render 'ug-icon-caret' %}
            </summary>
            <div class="ug-collapsible__content rte">{{ block.settings.content }}</div>
          </details>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collapsible content",
  "max_blocks": 12,
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "select", "id": "heading_alignment", "options": [{"value": "left", "label": "Left"}, {"value": "center", "label": "Center"}, {"value": "right", "label": "Right"}], "default": "center", "label": "Heading alignment" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Row",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "richtext", "id": "content", "label": "Content" }
      ]
    }
  ],
  "presets": [{ "name": "Collapsible content", "blocks": [{"type": "row"}, {"type": "row"}] }]
}
{% endschema %}
