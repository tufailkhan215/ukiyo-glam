<section class="ug-video-popup section-{{ section.id }}-padding">
  <div class="page-width">
    {% assign video_id = '' %}
{% assign video_type = '' %}
{% if section.settings.video_url != blank %}
  {% if section.settings.video_url.type == 'youtube' %}
    {% assign video_type = 'youtube' %}
    {% assign video_id = section.settings.video_url.id %}
  {% elsif section.settings.video_url.type == 'vimeo' %}
    {% assign video_type = 'vimeo' %}
    {% assign video_id = section.settings.video_url.id %}
  {% endif %}
{% endif %}
<div class="ug-video-popup__trigger" data-video-popup data-video-type="{{ video_type }}" data-video-id="{{ video_id }}">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.heading | escape }}" width="800" loading="lazy">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'ug-video-popup__placeholder' }}
      {% endif %}
      <button type="button" class="ug-video-popup__play" aria-label="Play video">{% render 'ug-icon-play' %}</button>
      {% if section.settings.heading != blank %}<h2 class="ug-video-popup__heading">{{ section.settings.heading }}</h2>{% endif %}
    </div>
  </div>
</section>
<div id="ug-video-popup-modal" class="ug-video-popup-modal" aria-hidden="true">
  <div class="ug-video-popup-modal__overlay" data-close-video-popup></div>
  <div class="ug-video-popup-modal__inner">
    <button type="button" class="ug-video-popup-modal__close" data-close-video-popup aria-label="{{ 'accessibility.close' | t }}">{% render 'ug-icon-close' %}</button>
    <div class="ug-video-popup-modal__player" data-video-popup-player></div>
  </div>
</div>

{% schema %}
{
  "name": "Video pop up",
  "settings": [
    { "type": "video_url", "id": "video_url", "label": "Video URL", "accept": ["youtube", "vimeo"] },
    { "type": "image_picker", "id": "image", "label": "Cover image" },
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Video pop up" }]
}
{% endschema %}
