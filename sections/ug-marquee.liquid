<section class="ug-marquee section-{{ section.id }}-padding" aria-hidden="true">
  <div class="ug-marquee__track" data-marquee>
    <div class="ug-marquee__content">
      {% for i in (1..3) %}
        {% if section.settings.text != blank %}
          <span class="ug-marquee__text">{{ section.settings.text }}</span>
          {% if section.settings.link != blank %}<a href="{{ section.settings.link }}" class="ug-marquee__link">{{ section.settings.link_text | default: 'Shop' }}</a>{% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Marquee",
  "settings": [
    { "type": "text", "id": "text", "label": "Text" },
    { "type": "url", "id": "link", "label": "Link" },
    { "type": "text", "id": "link_text", "label": "Link text" },
    { "type": "range", "id": "speed", "min": 10, "max": 60, "step": 5, "default": 30, "label": "Animation speed (seconds)" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 40, "step": 4, "default": 12, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 40, "step": 4, "default": 12, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Marquee" }]
}
{% endschema %}
