<section class="ug-apps section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="ug-apps__inner">
      {% for block in section.blocks %}
        {% if block.type == '@app' %}
          <div {{ block.shopify_attributes }}>{% render block %}</div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "App embed",
  "blocks": [
    { "type": "@app" }
  ],
  "settings": [
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "App embed" }]
}
{% endschema %}
