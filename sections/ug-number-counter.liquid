<section class="ug-number-counter section-{{ section.id }}-padding">
  <div class="page-width ug-number-counter__grid" style="--ug-cols: {{ section.blocks.size }};">
    {% for block in section.blocks %}
      {% if block.type == 'stat' %}
        <div class="ug-number-counter__item" {{ block.shopify_attributes }} data-count-up data-end="{{ block.settings.number }}">
          <span class="ug-number-counter__number">0</span>
          {% if block.settings.suffix != blank %}<span class="ug-number-counter__suffix">{{ block.settings.suffix }}</span>{% endif %}
          {% if block.settings.label != blank %}<p class="ug-number-counter__label">{{ block.settings.label }}</p>{% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Number counter",
  "max_blocks": 6,
  "settings": [
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        { "type": "text", "id": "number", "label": "Number" },
        { "type": "text", "id": "suffix", "label": "Suffix (e.g. +, %)" },
        { "type": "text", "id": "label", "label": "Label" }
      ]
    }
  ],
  "presets": [{ "name": "Number counter", "blocks": [{"type": "stat"}, {"type": "stat"}, {"type": "stat"}] }]
}
{% endschema %}
