<section class="ug-multicolumn ug-section-animate section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      {% render 'ug-section-heading', heading: section.settings.heading, subheading: section.settings.subheading, alignment: section.settings.heading_alignment %}
    {% endif %}
    <div class="ug-multicolumn__grid" style="--ug-columns: {{ section.settings.columns }};">
      {% for block in section.blocks %}
        {% if block.type == 'column' %}
          <div class="ug-multicolumn__item" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <div class="ug-multicolumn__media">
                <img src="{{ block.settings.image | image_url: width: 400 }}" alt="{{ block.settings.title | escape }}" width="400" loading="lazy">
              </div>
            {% endif %}
            {% if block.settings.title != blank %}<h3 class="ug-multicolumn__title">{{ block.settings.title }}</h3>{% endif %}
            {% if block.settings.text != blank %}<div class="ug-multicolumn__text rte">{{ block.settings.text }}</div>{% endif %}
            {% if block.settings.link_label != blank and block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="ug-multicolumn__link">{{ block.settings.link_label }}</a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Multicolumn",
  "max_blocks": 6,
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "select", "id": "heading_alignment", "options": [{"value": "left", "label": "Left"}, {"value": "center", "label": "Center"}, {"value": "right", "label": "Right"}], "default": "center", "label": "Heading alignment" },
    { "type": "range", "id": "columns", "min": 2, "max": 4, "step": 1, "default": 3, "label": "Columns" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "title", "label": "Title" },
        { "type": "richtext", "id": "text", "label": "Text" },
        { "type": "text", "id": "link_label", "label": "Link label" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [{ "name": "Multicolumn" }]
}
{% endschema %}
