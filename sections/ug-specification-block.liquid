{% comment %} Specification block â€“ alternate name for specifications (mirror source specification-block) {% endcomment %}
<section class="ug-specifications ug-specification-block section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}<h2 class="ug-specifications__heading">{{ section.settings.heading }}</h2>{% endif %}
    <table class="ug-specifications__table">
      {% for block in section.blocks %}
        {% if block.type == 'row' %}
          <tr {{ block.shopify_attributes }}>
            <td class="ug-specifications__key">{{ block.settings.key }}</td>
            <td class="ug-specifications__value">{{ block.settings.value }}</td>
          </tr>
        {% endif %}
      {% endfor %}
    </table>
  </div>
</section>

<style>
  .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; }
</style>

{% schema %}
{
  "name": "Specification block",
  "max_blocks": 20,
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "blocks": [
    { "type": "row", "name": "Row", "settings": [
      { "type": "text", "id": "key", "label": "Label" },
      { "type": "text", "id": "value", "label": "Value" }
    ]}
  ],
  "presets": [{ "name": "Specification block", "blocks": [{ "type": "row" }, { "type": "row" }] }]
}
{% endschema %}
