{% comment %} Recover password page content section {% endcomment %}
<section class="ug-recover-password section-{{ section.id }}-padding">
  <div class="page-width ug-recover-password__inner">
    <h1 class="ug-recover-password__title">{{ 'customer.recover_password.title' | t | default: 'Reset your password' }}</h1>
    <p class="ug-recover-password__text">{{ 'customer.recover_password.subtext' | t | default: 'We will send you an email to reset your password.' }}</p>
    {% form 'recover_customer_password', class: 'ug-recover-password__form' %}
      {% if form.posted_successfully? %}
        <p class="ug-recover-password__success">{{ 'customer.recover_password.success' | t }}</p>
      {% endif %}
      <label for="RecoverEmail">{{ 'customer.recover_password.email' | t }}</label>
      <input type="email" id="RecoverEmail" name="email" required>
      <button type="submit" class="ug-btn ug-btn--primary">{{ 'customer.recover_password.submit' | t | default: 'Submit' }}</button>
    {% endform %}
  </div>
</section>

<style>
  .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; }
</style>

{% schema %}
{
  "name": "Recover password",
  "settings": [
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 48, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 48, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Recover password" }]
}
{% endschema %}
