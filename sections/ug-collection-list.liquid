<section class="ug-collection-list section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      {% render 'ug-section-heading', heading: section.settings.heading, subheading: section.settings.subheading, alignment: section.settings.heading_alignment %}
    {% endif %}
    <div class="ug-collection-list__grid" style="--ug-cols: {{ section.settings.columns }};">
      {% if section.settings.collection_list != blank %}
        {% for collection in section.settings.collection_list %}
          <a href="{{ collection.url }}" class="ug-collection-list__item">
            <div class="ug-collection-list__media">
              {% if collection.image %}
                <img src="{{ collection.image | image_url: width: 600 }}" alt="{{ collection.title | escape }}" width="600" loading="lazy">
              {% else %}
                {{ 'collection-1' | placeholder_svg_tag: 'ug-collection-list__placeholder' }}
              {% endif %}
            </div>
            <h3 class="ug-collection-list__title">{{ collection.title }}</h3>
          </a>
        {% endfor %}
      {% else %}
        {% for collection in collections limit: section.settings.collections_to_show %}
          <a href="{{ collection.url }}" class="ug-collection-list__item">
            <div class="ug-collection-list__media">
              {% if collection.image %}
                <img src="{{ collection.image | image_url: width: 600 }}" alt="{{ collection.title | escape }}" width="600" loading="lazy">
              {% else %}
                {{ 'collection-1' | placeholder_svg_tag: 'ug-collection-list__placeholder' }}
              {% endif %}
            </div>
            <h3 class="ug-collection-list__title">{{ collection.title }}</h3>
          </a>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection list",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "select", "id": "heading_alignment", "options": [{"value": "left", "label": "Left"}, {"value": "center", "label": "Center"}, {"value": "right", "label": "Right"}], "default": "center", "label": "Heading alignment" },
    { "type": "collection_list", "id": "collection_list", "label": "Collections" },
    { "type": "range", "id": "collections_to_show", "min": 2, "max": 12, "step": 1, "default": 4, "label": "Collections to show" },
    { "type": "range", "id": "columns", "min": 2, "max": 4, "step": 1, "default": 4, "label": "Columns" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Collection list" }]
}
{% endschema %}
