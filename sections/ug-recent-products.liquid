<section class="ug-recent-products section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      {% render 'ug-section-heading', heading: section.settings.heading, alignment: 'center' %}
    {% endif %}
    <ul class="ug-recent-products__grid">
      {% if section.settings.collection != blank %}
      {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
        <li>{% render 'ug-card-product', product: product %}</li>
      {% endfor %}
      {% endif %}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Recent products",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "collection", "id": "collection", "label": "Collection" },
    { "type": "range", "id": "products_to_show", "min": 4, "max": 16, "step": 2, "default": 8, "label": "Products to show" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Recent products" }]
}
{% endschema %}
