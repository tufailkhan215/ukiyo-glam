{% style %}
  .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px; }
  @media (min-width: 750px) {
    .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; }
  }
{% endstyle %}
<section class="ug-slideshow section-{{ section.id }}-padding" id="ug-slideshow-{{ section.id }}" data-autoplay-seconds="{{ section.settings.autoplay_seconds }}">
  <div class="ug-slideshow__track" data-slideshow>
    {% for block in section.blocks %}
      {% if block.type == 'slide' %}
        <div class="ug-slideshow__slide" {{ block.shopify_attributes }}>
          <div class="ug-slideshow__media">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 1600 }}" alt="{{ block.settings.heading | escape }}" width="1600" loading="{{ forloop.first | json }}" sizes="100vw">
            {% else %}
              {{ 'lifestyle-1' | placeholder_svg_tag: 'ug-slideshow__placeholder' }}
            {% endif %}
            <div class="ug-slideshow__overlay" style="opacity: {{ block.settings.overlay_opacity | times: 0.01 }};"></div>
          </div>
          <div class="ug-slideshow__content page-width">
            {% if block.settings.subheading != blank %}<p class="ug-slideshow__subheading">{{ block.settings.subheading }}</p>{% endif %}
            {% if block.settings.heading != blank %}<h2 class="ug-slideshow__heading">{{ block.settings.heading }}</h2>{% endif %}
            {% if block.settings.button_label != blank and block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="ug-btn ug-btn--primary">{{ block.settings.button_label }}</a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  {% if section.blocks.size > 1 %}
    <button type="button" class="ug-slideshow__prev" data-slideshow-prev aria-label="Previous">{% render 'ug-icon-left-arrow' %}</button>
    <button type="button" class="ug-slideshow__next" data-slideshow-next aria-label="Next">{% render 'ug-icon-right-arrow' %}</button>
    <div class="ug-slideshow__dots" data-slideshow-dots></div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Slideshow",
  "max_blocks": 8,
  "settings": [
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 0, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 0, "unit": "px", "label": "Padding bottom" },
    { "type": "range", "id": "autoplay_seconds", "min": 0, "max": 10, "step": 1, "default": 5, "label": "Autoplay seconds" }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "text", "id": "subheading", "label": "Subheading" },
        { "type": "text", "id": "button_label", "label": "Button label" },
        { "type": "url", "id": "link", "label": "Link" },
        { "type": "range", "id": "overlay_opacity", "min": 0, "max": 100, "step": 5, "default": 30, "label": "Overlay opacity" }
      ]
    }
  ],
  "presets": [{ "name": "Slideshow", "blocks": [{ "type": "slide" }] }]
}
{% endschema %}
