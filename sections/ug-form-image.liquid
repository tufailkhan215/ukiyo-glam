<section class="ug-form-image section-{{ section.id }}-padding">
  <div class="page-width ug-form-image__grid">
    <div class="ug-form-image__media">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 600 }}" alt="{{ section.settings.heading | escape }}" width="600" loading="lazy">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'ug-form-image__placeholder' }}
      {% endif %}
    </div>
    <div class="ug-form-image__form-wrap">
      {% if section.settings.heading != blank %}<h2 class="ug-form-image__heading">{{ section.settings.heading }}</h2>{% endif %}
      {% form 'contact', class: 'ug-form-image__form' %}
        {{ form.errors | default_errors }}
        <input type="text" name="contact[name]" placeholder="{{ 'customer.register.first_name' | t }}" required>
        <input type="email" name="contact[email]" placeholder="{{ 'customer.register.email' | t }}" required>
        <textarea name="contact[body]" rows="4" placeholder="{{ 'contact.form.message' | t }}" required></textarea>
        <button type="submit" class="ug-btn ug-btn--primary">{{ 'contact.form.submit' | t }}</button>
      {% endform %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Form with image",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Image" },
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Form with image" }]
}
{% endschema %}
