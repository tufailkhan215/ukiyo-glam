<section class="ug-search page-width">
  <h1>{{ 'general.search.title' | t }}</h1>
  <form action="{{ routes.search_url }}" method="get" role="search">
    <input type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}">
    <button type="submit">{{ 'general.search.submit' | t }}</button>
  </form>
  {% if search.performed %}
    {% if search.results_count > 0 %}
      <ul class="ug-search__results">
        {% for item in search.results %}
          <li>
            <a href="{{ item.url }}">
              {% if item.featured_image %}<img src="{{ item.featured_image | image_url: width: 120 }}" alt="{{ item.title | escape }}">{% endif %}
              {{ item.title }} â€“ {{ item.price | money }}
            </a>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <p>{{ 'general.search.no_results' | t }}</p>
    {% endif %}
  {% endif %}
</section>

{% schema %}
{
  "name": "Search",
  "settings": []
}
{% endschema %}
