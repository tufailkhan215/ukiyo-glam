<section class="ug-specifications section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      {% render 'ug-section-heading', heading: section.settings.heading, alignment: section.settings.heading_alignment %}
    {% endif %}
    <div class="ug-specifications__table-wrap">
      <table class="ug-specifications__table">
        <tbody>
          {% for block in section.blocks %}
            {% if block.type == 'row' %}
              <tr {{ block.shopify_attributes }}>
                <td class="ug-specifications__key">{{ block.settings.key }}</td>
                <td class="ug-specifications__value">{{ block.settings.value }}</td>
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Specifications",
  "max_blocks": 20,
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "select", "id": "heading_alignment", "options": [{"value": "left", "label": "Left"}, {"value": "center", "label": "Center"}], "default": "left", "label": "Heading alignment" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Row",
      "settings": [
        { "type": "text", "id": "key", "label": "Label" },
        { "type": "text", "id": "value", "label": "Value" }
      ]
    }
  ],
  "presets": [{ "name": "Specifications" }]
}
{% endschema %}
