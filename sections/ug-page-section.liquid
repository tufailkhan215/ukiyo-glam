{% comment %} Simple page section â€“ for static page content (mirror source page section) {% endcomment %}
<section class="ug-page-section section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}<h1 class="ug-page-section__heading">{{ section.settings.heading }}</h1>{% endif %}
    {% if section.settings.content != blank %}
      <div class="ug-page-section__content rte">{{ section.settings.content }}</div>
    {% endif %}
    {% if section.settings.show_page_content and page.content != blank %}
      <div class="ug-page-section__page rte">{{ page.content }}</div>
    {% endif %}
  </div>
</section>

<style>
  .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; }
</style>

{% schema %}
{
  "name": "Page",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "richtext", "id": "content", "label": "Content" },
    { "type": "checkbox", "id": "show_page_content", "default": true, "label": "Show page content" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Page" }]
}
{% endschema %}
