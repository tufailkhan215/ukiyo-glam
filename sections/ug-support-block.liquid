<section class="ug-support section-{{ section.id }}-padding">
  <div class="page-width ug-support__grid" style="--ug-cols: {{ section.blocks.size }};">
    {% for block in section.blocks %}
      {% if block.type == 'item' %}
        <div class="ug-support__item" {{ block.shopify_attributes }}>
          {% if block.settings.icon == 'location' %}
            {% render 'ug-icon-location' %}
          {% elsif block.settings.icon == 'phone' %}
            {% render 'ug-icon-phone' %}
          {% elsif block.settings.icon == 'mail' %}
            {% render 'ug-icon-mail' %}
          {% else %}
            {% render 'ug-icon-gift' %}
          {% endif %}
          {% if block.settings.heading != blank %}<h3 class="ug-support__heading">{{ block.settings.heading }}</h3>{% endif %}
          {% if block.settings.text != blank %}<p class="ug-support__text">{{ block.settings.text }}</p>{% endif %}
          {% if block.settings.link_label != blank and block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="ug-support__link">{{ block.settings.link_label }}</a>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Support block",
  "max_blocks": 4,
  "settings": [
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        { "type": "select", "id": "icon", "options": [{"value": "location", "label": "Location"}, {"value": "phone", "label": "Phone"}, {"value": "mail", "label": "Mail"}, {"value": "gift", "label": "Gift"}], "default": "mail", "label": "Icon" },
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "textarea", "id": "text", "label": "Text" },
        { "type": "text", "id": "link_label", "label": "Link label" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [{ "name": "Support block", "blocks": [{"type": "item"}, {"type": "item"}, {"type": "item"}] }]
}
{% endschema %}
