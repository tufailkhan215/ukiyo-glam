{% comment %} Collection list variant 2 â€“ different layout (e.g. horizontal scroll or alternate grid) {% endcomment %}
<section class="ug-collection-list2 ug-section-{{ section.id }}-padding" aria-label="{{ section.settings.heading | default: 'Collections' }}">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      {% render 'ug-section-heading', heading: section.settings.heading, subheading: section.settings.subheading, alignment: section.settings.heading_alignment %}
    {% endif %}
    <div class="ug-collection-list2__wrap">
      <div class="ug-collection-list2__grid ug-collection-list2__grid--{{ section.settings.layout }}">
        {% if section.settings.collection_list != blank %}
          {% for col in section.settings.collection_list %}
            {% render 'ug-card-collection2', collection: col %}
          {% endfor %}
        {% else %}
          {% for col in collections limit: section.settings.collections_to_show %}
            {% render 'ug-card-collection2', collection: col %}
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .ug-section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; }
</style>

{% schema %}
{
  "name": "Collection list 2",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "select", "id": "heading_alignment", "options": [{"value": "left", "label": "Left"}, {"value": "center", "label": "Center"}, {"value": "right", "label": "Right"}], "default": "center", "label": "Heading alignment" },
    { "type": "collection_list", "id": "collection_list", "label": "Collections" },
    { "type": "range", "id": "collections_to_show", "min": 2, "max": 12, "step": 1, "default": 4, "label": "Collections to show" },
    { "type": "select", "id": "layout", "options": [{"value": "grid", "label": "Grid"}, {"value": "scroll", "label": "Horizontal scroll"}], "default": "grid", "label": "Layout" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Collection list 2" }]
}
{% endschema %}
