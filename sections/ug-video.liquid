<section class="ug-video-section section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      {% render 'ug-section-heading', heading: section.settings.heading, alignment: 'center' %}
    {% endif %}
    <div class="ug-video-section__wrapper">
      {% if section.settings.video_url != blank %}
        <div class="ug-video-section__media" data-video-wrapper>
          {% if section.settings.video_url.type == 'youtube' %}
            <iframe src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?autoplay=0" allowfullscreen class="ug-video-section__iframe"></iframe>
          {% elsif section.settings.video_url.type == 'vimeo' %}
            <iframe src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}" allowfullscreen class="ug-video-section__iframe"></iframe>
          {% endif %}
        </div>
      {% elsif section.settings.cover_image != blank %}
        <div class="ug-video-section__placeholder" data-video-trigger style="background-image: url({{ section.settings.cover_image | image_url: width: 1200 }})">
          <button type="button" class="ug-video-section__play" aria-label="Play video">{% render 'ug-icon-play' %}</button>
        </div>
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'ug-video-section__placeholder' }}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Video",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "video_url", "id": "video_url", "label": "Video URL", "accept": ["youtube", "vimeo"] },
    { "type": "image_picker", "id": "cover_image", "label": "Cover image (if video URL empty)" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding top" },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 36, "unit": "px", "label": "Padding bottom" }
  ],
  "presets": [{ "name": "Video" }]
}
{% endschema %}
