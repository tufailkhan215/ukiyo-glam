[
  {
    "name": "theme_info",
    "theme_name": "Ukiyo-Glam",
    "theme_version": "1.0.0",
    "theme_author": "Ukiyo-Glam",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Colors",
    "settings": [
      { "type": "header", "content": "Buttons" },
      { "type": "color", "id": "color_btn_text", "default": "#ffffff", "label": "Button text" },
      { "type": "color", "id": "color_btn_bg", "default": "#53483f", "label": "Button background" },
      { "type": "header", "content": "Accents" },
      { "type": "color", "id": "color_accent_1", "default": "#cd865c", "label": "Accent 1" },
      { "type": "color", "id": "color_accent_2", "default": "#53483f", "label": "Accent 2" },
      { "type": "color", "id": "color_accent_3", "default": "#8b7355", "label": "Accent 3" },
      { "type": "header", "content": "Text & backgrounds" },
      { "type": "color", "id": "color_text", "default": "#53483f", "label": "Text" },
      { "type": "color", "id": "color_bg_1", "default": "#f6f5f0", "label": "Background 1" },
      { "type": "color", "id": "color_bg_2", "default": "#ffffff", "label": "Background 2" },
      { "type": "color", "id": "color_bg_3", "default": "#eeeeeb", "label": "Background 3" },
      { "type": "header", "content": "Overlay" },
      { "type": "color", "id": "color_overlay", "default": "#000000", "label": "Overlay" },
      { "type": "range", "id": "overlay_opacity", "min": 0, "max": 100, "step": 5, "default": 40, "unit": "%", "label": "Overlay opacity" }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      { "type": "checkbox", "id": "use_asset_fonts", "default": false, "label": "Use theme asset fonts (add italiana.woff2, poppins.woff2 to Assets for source look)" },
      { "type": "font_picker", "id": "font_heading", "default": "cormorant_n4", "label": "Heading font (for source look: enable asset fonts + add Italiana)" },
      { "type": "font_picker", "id": "font_body", "default": "poppins_n4", "label": "Body font (source: Poppins)" },
      { "type": "font_picker", "id": "font_additional", "default": "poppins_n4", "label": "Additional font" },
      { "type": "range", "id": "heading_scale", "min": 80, "max": 150, "step": 5, "default": 100, "unit": "%", "label": "Heading scale" },
      { "type": "range", "id": "body_scale", "min": 80, "max": 120, "step": 5, "default": 100, "unit": "%", "label": "Body scale" }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      { "type": "range", "id": "page_width", "min": 1000, "max": 1700, "step": 20, "default": 1200, "unit": "px", "label": "Page width" },
      { "type": "checkbox", "id": "page_full_width_spacing", "default": false, "label": "Full width spacing" },
      { "type": "range", "id": "section_spacing", "min": 0, "max": 100, "step": 4, "default": 48, "unit": "px", "label": "Section spacing" },
      { "type": "range", "id": "grid_spacing", "min": 0, "max": 40, "step": 2, "default": 20, "unit": "px", "label": "Grid spacing" }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      { "type": "select", "id": "cart_type", "options": [{"value": "drawer", "label": "Drawer"}, {"value": "page", "label": "Page"}, {"value": "notification", "label": "Notification (toast)"}], "default": "drawer", "label": "Cart type" }
    ]
  },
  {
    "name": "Favicon & branding",
    "settings": [
      { "type": "image_picker", "id": "favicon", "label": "Favicon", "info": "Will be used as browser tab icon" }
    ]
  },
  {
    "name": "Social",
    "settings": [
      { "type": "text", "id": "social_facebook_link", "label": "Facebook URL" },
      { "type": "text", "id": "social_instagram_link", "label": "Instagram URL" },
      { "type": "text", "id": "social_twitter_link", "label": "Twitter URL" },
      { "type": "text", "id": "social_pinterest_link", "label": "Pinterest URL" },
      { "type": "text", "id": "social_youtube_link", "label": "YouTube URL" },
      { "type": "text", "id": "social_tiktok_link", "label": "TikTok URL" }
    ]
  },
  {
    "name": "Footer",
    "settings": [
      { "type": "select", "id": "footer_style", "options": [{"value": "default", "label": "Default"}, {"value": "style_a", "label": "Style A"}, {"value": "style_b", "label": "Style B"}, {"value": "style_c", "label": "Style C"}, {"value": "style_d", "label": "Style D"}], "default": "default", "label": "Footer style" }
    ]
  },
  {
    "name": "Popups & modals",
    "settings": [
      { "type": "header", "content": "Search" },
      { "type": "checkbox", "id": "enable_predictive_search", "default": true, "label": "Enable predictive search popup" },
      { "type": "select", "id": "search_popup_type", "options": [{"value": "predictive", "label": "Predictive search"}, {"value": "overlay", "label": "Search overlay (full page)"}], "default": "predictive", "label": "Search icon opens" },
      { "type": "header", "content": "Newsletter" },
      { "type": "checkbox", "id": "enable_newsletter_modal", "default": true, "label": "Show newsletter modal (first visit / delay)" },
      { "type": "header", "content": "Other" },
      { "type": "checkbox", "id": "enable_scroll_to_top", "default": true, "label": "Show scroll to top button" }
    ]
  },
  {
    "name": "Preloader",
    "settings": [
      { "type": "checkbox", "id": "enable_preloader", "default": false, "label": "Show preloader on page load" },
      { "type": "image_picker", "id": "preloader_logo", "label": "Preloader logo (optional)" }
    ]
  },
  {
    "name": "Product badges",
    "settings": [
      { "type": "checkbox", "id": "show_sale_badge", "default": true, "label": "Show sale badge on product cards" },
      { "type": "checkbox", "id": "show_sold_out_badge", "default": true, "label": "Show sold out badge" },
      { "type": "text", "id": "sale_badge_text", "default": "Sale", "label": "Sale badge text" },
      { "type": "text", "id": "sold_out_badge_text", "default": "Sold out", "label": "Sold out badge text" }
    ]
  },
  {
    "name": "Product card",
    "settings": [
      { "type": "select", "id": "card_image_ratio", "options": [{"value": "adapt", "label": "Adapt to image"}, {"value": "portrait", "label": "Portrait"}, {"value": "square", "label": "Square"}], "default": "adapt", "label": "Image ratio" },
      { "type": "checkbox", "id": "card_show_secondary_image", "default": true, "label": "Show second image on hover" },
      { "type": "checkbox", "id": "card_show_vendor", "default": false, "label": "Show vendor" },
      { "type": "checkbox", "id": "card_show_rating", "default": false, "label": "Show product rating" }
    ]
  },
  {
    "name": "Media",
    "settings": [
      { "type": "checkbox", "id": "enable_image_zoom", "default": true, "label": "Enable image zoom on product page" },
      { "type": "select", "id": "product_media_ratio", "options": [{"value": "adapt", "label": "Adapt"}, {"value": "portrait", "label": "Portrait"}, {"value": "square", "label": "Square"}], "default": "adapt", "label": "Product gallery ratio" }
    ]
  },
  {
    "name": "Drawers",
    "settings": [
      { "type": "select", "id": "drawer_cart_position", "options": [{"value": "right", "label": "Right"}, {"value": "left", "label": "Left"}], "default": "right", "label": "Cart drawer position" }
    ]
  },
  {
    "name": "Breadcrumb",
    "settings": [
      { "type": "checkbox", "id": "show_breadcrumb", "default": true, "label": "Show breadcrumb" },
      { "type": "select", "id": "breadcrumb_style", "options": [{"value": "minimal", "label": "Minimal"}, {"value": "with_bg", "label": "With background"}], "default": "minimal", "label": "Breadcrumb style" }
    ]
  },
  {
    "name": "Search input",
    "settings": [
      { "type": "text", "id": "search_placeholder", "default": "Search", "label": "Search placeholder" },
      { "type": "checkbox", "id": "search_show_only_products", "default": false, "label": "Show only products in predictive search" }
    ]
  }
]
