<div id="ug-sticky-cart-bar" class="ug-sticky-cart-bar" aria-hidden="true" hidden data-ug-sticky-cart-bar>
  <div class="page-width ug-sticky-cart-bar__inner">
    <div class="ug-sticky-cart-bar__product">
      <span class="ug-sticky-cart-bar__title" data-ug-sticky-title></span>
