{% comment %} Search overlay / modal â€“ full-screen search (search-overlay-model equivalent) {% endcomment %}
<div id="ug-search-overlay" class="ug-search-overlay" aria-hidden="true" hidden role="dialog" aria-label="{{ 'search.title' | t }}">
  <div class="ug-search-overlay__inner">
    <button type="button" class="ug-search-overlay__close" aria-label="{{ 'accessibility.close' | t }}" data-ug-search-close>{% render 'ug-icon-close' %}</button>
    <form action="{{ routes.search_url }}" method="get" class="ug-search-overlay__form" role="search">
      <label for="ug-search-overlay-input" class="visually-hidden">{{ 'search.placeholder' | t }}</label>
      <input type="search" id="ug-search-overlay-input" name="q" placeholder="{% if settings.search_placeholder != blank %}{{ settings.search_placeholder }}{% else %}Search{% endif %}" autocomplete="off" class="ug-search-overlay__input">
      <input type="hidden" name="options[prefix]" value="last">
      <button type="submit" class="ug-btn ug-btn--primary">{{ 'search.submit' | t }}</button>
    </form>
    <div class="ug-search-overlay__results" data-ug-search-results></div>
  </div>
</div>
