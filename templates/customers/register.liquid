{% layout 'theme' %}
<div class="ug-customer page-width">
  <div class="ug-customer__inner">
    <h1 class="ug-customer__title">{{ 'customer.register.title' | t }}</h1>
    {% form 'create_customer', class: 'ug-customer__form' %}
      {{ form.errors | default_errors }}
      <div class="ug-customer__field">
        <label for="FirstName">{{ 'customer.register.first_name' | t }}</label>
        <input type="text" name="customer[first_name]" id="FirstName" autocomplete="given-name">
      </div>
      <div class="ug-customer__field">
        <label for="LastName">{{ 'customer.register.last_name' | t }}</label>
        <input type="text" name="customer[last_name]" id="LastName" autocomplete="family-name">
      </div>
      <div class="ug-customer__field">
        <label for="Email">{{ 'customer.register.email' | t }}</label>
        <input type="email" name="customer[email]" id="Email" autocomplete="email" required>
      </div>
      <div class="ug-customer__field">
        <label for="CreatePassword">{{ 'customer.register.password' | t }}</label>
        <input type="password" name="customer[password]" id="CreatePassword" autocomplete="new-password" required>
      </div>
      <button type="submit" class="ug-btn ug-btn--primary">{{ 'customer.register.submit' | t }}</button>
    {% endform %}
  </div>
</div>
